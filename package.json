{
  "name": "gt-sports",
  "version": "0.0.144",
  "description": "prototype - simple GraphQL & REST api server with mock data...",
  "author": "eswat2",
  "repository": "eswat2/gt-sports",
  "license": "MIT",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "5.1.0",
    "express-graphql": "0.12.0",
    "got": "14.6.1",
    "graphql": "16.12.0",
    "ts-tiny-invariant": "2.0.5"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "start": "node server",
    "dev": "vc dev",
    "cc": "prettier --check './**/*.js'",
