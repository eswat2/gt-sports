    "format": "prettier --write server.js cSpell.json",
    "predeploy": "yarn version --patch",
    "deploy": "vc --prod",
    "open": "open https://gt-sports.vercel.app/graphql"
  },
  "devDependencies": {
    "prettier": "3.6.2"
  }
